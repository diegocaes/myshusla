---
const services = [
  {
    title: "Limpieza Premium",
    description: "Perfecta para tus sneakers de gamuza y delicados.",
    image: "/images/sneaker-cleaning.png",
    buttonText: "Explorar Más",
  },
  {
    title: "Cuidado de Alta Gama",
    description: "Protege tus zapatillas de lujo con materiales especiales.",
    image: "/images/luxury-sneaker-care.png",
    buttonText: "Ver Detalles",
  },
  {
    title: "Limpieza para Deportes",
    description: "Adaptado para running, fútbol y otros deportes.",
    image: "/images/sports-shoes-cleaning.png",
    buttonText: "Aprender Más",
  },
];
---

<section id="services" class="services-section">
  <h2 class="section-title">Nuestros Servicios</h2>
  <div class="services-grid">
    {services.map((service) => (
      <div class="service-card">
        <img src={service.image} alt={service.title} class="service-image" />
        <div class="service-overlay">
          <h3 class="service-title">{service.title}</h3>
          <p class="service-description">{service.description}</p>
          <button class="service-button">{service.buttonText}</button>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  /* Services Section */
  .services-section {
    padding: 2rem 2rem;
    background-color: var(--background-color, #fff);
    text-align: center;
  }

  .section-title {
    font-family: var(--primary-font, 'Inter', sans-serif);
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--primary-color, #000);
    margin-bottom: 2rem;
  }

  /* Grid Layout */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Smaller minimum size */
    gap: 1rem; /* Less gap between cards */
  }

  /* Service Card */
  .service-card {
    position: relative;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    height: 300px; /* Consistent height */
  }

  .service-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensures images fit nicely within the container */
  }

/* Overlay */
.service-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6); /* Semi-transparent black overlay */
  color: #fff;
  display: flex; /* Flexbox for centering */
  flex-direction: column;
  justify-content: center; /* Center vertically */
  align-items: center; /* Center horizontally */
  padding: 1rem;
  box-sizing: border-box; /* Ensure padding does not affect centering */
  opacity: 0;
  transition: opacity 0.3s ease-in-out;
  text-align: center; /* Center text inside */
  gap: 1rem; /* Space between title, description, and button */
}

.service-card:hover .service-overlay {
  opacity: 1;
}

.service-title {
  font-family: var(--primary-font, 'Inter', sans-serif);
  font-size: 1.2rem;
  font-weight: 700;
  margin: 0;
}

.service-description {
  font-family: var(--primary-font, 'Inter', sans-serif);
  font-size: 0.9rem;
  margin: 0;
}

.service-button {
  font-family: var(--primary-font, 'Inter', sans-serif);
  font-size: 0.9rem;
  font-weight: 600;
  text-transform: uppercase;
  background-color: #fff;
  color: #000;
  border: none;
  padding: 0.5rem 0.75rem;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.service-button:hover {
  background-color: var(--primary-color, #000);
  color: #fff;
  transform: scale(1.05);
}

/* Ensures the card stays proportionally centered */
.service-card {
  position: relative;
  overflow: hidden;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box; /* Include padding in size calculations */
}

.service-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.services-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1rem;
}
  /* Button */
  .service-button {
    font-family: var(--primary-font, 'Inter', sans-serif);
    font-size: 0.9rem; /* Smaller button font size */
    font-weight: 600;
    text-transform: uppercase;
    background-color: #fff;
    color: #000;
    border: none;
    padding: 0.5rem 0.75rem;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .service-button:hover {
    background-color: var(--primary-color, #000);
    color: #fff;
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr; /* One column layout for smaller screens */
    }

    .service-card {
      height: 250px; /* Adjust height for smaller screens */
    }
  }
</style>