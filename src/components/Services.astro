---
const services = [
  {
    title: "Limpieza Standard",
    price: "$18",
    description: [
      "Limpieza externa (upper, suela, y midsole).",
      "Cordones y eliminación de suciedad superficial."
    ],
    image: "/images/sneaker-cleaning.png",
  },
  {
    title: "Limpieza Completa",
    price: "$28",
    description: [
      "Standard +",
      "Limpieza interna (plantillas y forros interiores).",
      "Manchas difíciles y eliminación de malos olores.",
    ],
    image: "/images/luxury-sneaker-care.png",
  },
  {
    title: "Servicios Extras",
    price: "$$",
    description: [
      "Impermeabilización: $5.",
      "Blanqueamiento de suelas: $7.",
      "Desoxidación: $7.",
      "Restauración de gamuza: $6."
    ],
    image: "/images/sports-shoes-cleaning.png",
  },
];
---

<section id="services" class="services-section">
  <h2 class="section-title">Nuestros Servicios</h2>
  <div class="services-grid">
    {services.map((service) => (
      <div class="service-card">
        <img src={service.image} alt={service.title} class="service-image" />
        <div class="service-content">
          <h3 class="service-title">{service.title}</h3>
          {service.price && <p class="service-price">{service.price}</p>}
          <ul class="service-description">
            {service.description.map((line) => (
              <li>{line}</li>
            ))}
          </ul>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .services-section {
    padding: 3rem 2rem;
    background-color: var(--background-color, #f9f9f9);
    text-align: center;
  }

  .section-title {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: #333;
    font-weight: 700;
    font-family: var(--primary-font, 'Inter', sans-serif);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    padding: 1.5rem;
    text-align: left;
  }

  .service-image {
    width: 100%;
    height: 120px;
    object-fit: cover;
    margin-bottom: 1rem;
    border-radius: 5px;
    opacity: 0.8;
  }

  .service-content {
    text-align: left;
  }

  .service-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #333;
    font-family: var(--primary-font, 'Inter', sans-serif);
  }

  .service-price {
    font-size: 1.2rem;
    font-weight: 600;
    color: #25d366;
    margin-bottom: 1rem;
    font-family: var(--primary-font, 'Inter', sans-serif);
  }

  .service-description {
    font-size: 1rem;
    line-height: 1.6;
    color: #555;
    font-family: var(--primary-font, 'Inter', sans-serif);
    margin-top: 0.5rem;
    padding-left: 1.2rem;
    list-style: disc;
  }

  .service-description li {
    margin-bottom: 0.5rem;
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }

    .service-card {
      padding: 1rem;
    }

    .service-title {
      font-size: 1.25rem;
    }

    .service-description {
      font-size: 1rem;
    }
  }
</style>