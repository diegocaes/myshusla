<script>
  class Toast {
    private static show(message: string) {
      const toast = document.createElement('div');
      toast.className = 'toast';
      toast.textContent = message;
      document.body.appendChild(toast);
      
      // Trigger animation
      setTimeout(() => toast.classList.add('show'), 10);
      setTimeout(() => {
        toast.classList.remove('show');
        setTimeout(() => toast.remove(), 300);
      }, 3000);
    }

    static error(message: string) {
      this.show(message);
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const comingSoonLinks = document.querySelectorAll('.coming-soon');
    
    const messages: Record<string, string> = {
      historia: '¡Pronto podrás conocer nuestra historia!',
      envios: '¡Información de envíos estará disponible próximamente!',
      terminos: '¡Términos y condiciones en construcción!'
    };

    comingSoonLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        try {
          const feature = (link as HTMLElement).dataset.feature as keyof typeof messages;
          Toast.error(messages[feature] || '¡Pronto estará disponible esta sección!');
        } catch (error) {
          console.error('Error showing coming soon message:', error);
        }
      });
    });
  });
</script>

